@model Category

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="s-content">

    <div class="row narrow">
        <div class="col-full s-content__header" data-aos="fade-up">

            <h1>Category:@Model.CategoryName </h1>

             <p class="lead">@Model.CategoryDescription</p>

        </div>
    </div>

    <div class="row masonry-wrap">
        <div class="masonry">
            <div class="grid-sizer"></div>
                @foreach (var post in @Model.CategoryPosts)
                {
                    <article class="masonry__brick entry format-standard" data-aos="fade-up">
                        <div class="entry__thumb">
                            <a href="single-standard.html" class="entry__thumb-link">
                                <img src="@post.Post.Media"
                             srcset="@post.Post.Media 1x, images/thumbs/masonry/lamp-800.jpg 2x" alt="">
                            </a>
                        </div>
                        <div class="entry__text">
                            <div class="entry__header">

                                <div class="entry__date">
                                    <a href="single-standard.html">@(((DateTime)post.Post.CreatedAt).ToString("MMMM dd, yyyy"))</a>
                                </div>
                                <h1 class="entry__title"><a href="single-standard.html">@post.Post.Title</a></h1>

                            </div>
                            <div class="entry__excerpt">
                                <p>
                                    @post.Post.Content.Substring(0, post.Post.Content.Substring(0, 100).LastIndexOf(" "))...
                                </p>
                            </div>
                            <div class="entry__meta">
                                <span class="entry__meta-links">
                                    <a href="category.html">@post.Category.CategoryName</a>
                                </span>
                            </div>
                        </div>
                    </article> <!-- end article -->
                }         
        </div> <!-- end masonry -->
    </div> <!-- end masonry-wrap -->
    <div class="row">
        <div class="col-full">
            <nav class="pgn">
                <ul>
                    <li><a class="pgn__prev" href="#0">Prev</a></li>
                    <li><a class="pgn__num" href="#0">1</a></li>
                    <li><span class="pgn__num current">2</span></li>
                    <li><a class="pgn__num" href="#0">3</a></li>
                    <li><a class="pgn__num" href="#0">4</a></li>
                    <li><a class="pgn__num" href="#0">5</a></li>
                    <li><span class="pgn__num dots">…</span></li>
                    <li><a class="pgn__num" href="#0">8</a></li>
                    <li><a class="pgn__next" href="#0">Next</a></li>
                </ul>
            </nav>
        </div>
    </div>

</section> <!-- s-content -->